---
layout: default
datasources:
  directory:
    from: directory
    limit: 20
---

<section class="bg-white border-b border-gray-200">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6">
      <div>
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-gray-900">
          {{ektrans "directory.title"}}
        </h1>
        <p class="mt-3 text-gray-600 max-w-2xl">
          {{ektrans "directory.subtitle"}}
        </p>
      </div>
    </div>
  </div>
</section>

<section class="bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 py-12">
    {{#if ekdata.directory}}
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {{#each ekdata.directory}}
          <article class="rounded-2xl border border-gray-200 bg-white p-6 hover:shadow-sm transition">
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-lg font-semibold text-gray-900">
                  {{this.name}}
                </h2>
                {{#if this.role}}
                  <p class="mt-1 text-sm text-gray-600">{{this.role}}</p>
                {{/if}}
              </div>

              {{#if this.tag}}
                <span class="shrink-0 rounded-full bg-gray-900 text-white text-xs px-2.5 py-1">
                  {{this.tag}}
                </span>
              {{/if}}
            </div>

            {{#if this.description}}
              <p class="mt-4 text-sm text-gray-600">
                {{this.description}}
              </p>
            {{/if}}

            <div class="mt-6 flex items-center justify-between">
              <a href="{{lang}}/directory-detail?uid={{this.objectid}}" class="text-sm font-medium text-gray-900 hover:underline">
                {{ektrans "directory.viewmore"}}
              </a>

              {{#if this.email}}
                <a href="mailto:{{this.email}}" class="text-sm text-gray-600 hover:text-gray-900">
                  {{ektrans "directory.contact"}}
                </a>
              {{/if}}
            </div>
          </article>
        {{/each}}
      </div>
    {{else}}
      <div class="rounded-2xl border border-gray-200 bg-white p-10 text-center">
        <p class="text-gray-600">
          {{ektrans "directory.nodata"}}
        </p>
      </div>
    {{/if}}

  </div>
</section>